<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/19" fx:controller="com.example.demo.CalculatorController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
    <HBox alignment="CENTER" spacing="20">
        <TextField fx:id="firstNumber" maxHeight="30" maxWidth="50" />
        <Label fx:id="operator" text="+" />
        <TextField fx:id="secondNumber" maxHeight="30" maxWidth="50" />
        <Label text="=" />
        <Label fx:id="resultText" prefWidth="40.0" />
    </HBox>
    <HBox alignment="CENTER" spacing="20">
        <Button onAction="#onPlus" text="+" />
        <Button onAction="#onMinus" text="-" />
        <Button onAction="#onMultiply" text="x" />
        <Button onAction="#onDivide" text="รท" />
    </HBox>
    <Button onAction="#onCalculateButtonClick" text="Calculate" />
    <Button onAction="#onClearButtonClick" text="Clear" />
</VBox>
